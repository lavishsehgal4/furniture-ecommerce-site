<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Furniture Gallery</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      /* Custom styles for enhanced aesthetics */
      body {
        font-family: "Inter", sans-serif;
      }
      .navbar {
        transition: all 0.3s ease;
      }
      .navbar.scrolled {
        background-color: rgba(255, 255, 255, 0.95);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
      .login-message {
        animation: fadeIn 1s ease-in-out;
      }
      @keyframes fadeIn {
        0% {
          opacity: 0;
          transform: translateY(20px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }
      @media (max-width: 640px) {
        .navbar {
          padding: 1rem;
        }
        .login-message {
          font-size: 1.25rem;
        }
      }
    </style>
  </head>
  <body class="bg-gray-100 min-h-screen flex flex-col">
    <!-- Navbar -->
    <nav class="navbar fixed top-0 left-0 w-full bg-white z-10">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-center items-center h-16">
          <a
            href="/"
            class="text-2xl font-bold text-gray-800 hover:text-indigo-600 transition-colors"
          >
            Furniture Gallery
          </a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow flex items-center justify-center mt-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1
          class="login-message text-2xl sm:text-3xl font-semibold text-gray-800 mb-4"
        >
          Please login to start adding items to cart
        </h1>
        <a
          href="/login"
          class="inline-block px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors"
        >
          Login Now
        </a>
      </div>
    </main>

    <!-- JavaScript for navbar scroll effect -->
    <script>
      window.addEventListener("scroll", () => {
        const navbar = document.querySelector(".navbar");
        if (window.scrollY > 50) {
          navbar.classList.add("scrolled");
        } else {
          navbar.classList.remove("scrolled");
        }
      });
    </script>
  </body>
</html>
